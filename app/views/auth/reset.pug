extends ../layout

block beforeBody
  - bodyClasses.push('login-page')

block content
  main.container(role='main')
    form.form-signin(role='form', action='/auth/reset/' + id, method='post')
      - var _csrfToken = csrfToken;
      input(type='hidden', name='_csrf', value=_csrfToken)
      .form-group
        p.lead Reset password
      .form-group
        input.form-control(type='password', name="password", placeholder='New Password', autocomplete='off')
      button.btn.btn-large.btn-primary.btn-block(type='submit') Reset
