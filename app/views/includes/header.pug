div.modal.fade.workspaceShareModal(id="shareWorkspaceModal", role="dialog")
  div.modal-dialog
    div.modal-content
      div.modal-header
        h5.modal-title Share Workspace with Users
        button.close(data-dismiss="modal", aria-label="Close")
          span(aria-hidden="true") &times;
      div.modal-body
        nav
        div.nav.nav-tabs(id="share-workspace-nav-tab", role="tablist")
          //- a.nav-item.nav-link.active.show(id="nav-share-users-tab", data-toggle="tab", href="#nav-share-users", role="tab", aria-controls="nav-share-users", aria-selected="true") with Users
          a.nav-item.nav-link.active.show(id="nav-share-url-tab", data-toggle="tab", href="#nav-share-url", role="tab", aria-controls="nav-share-url", aria-selected="false") via Url
        div.tab-content.pt-3(id="nav-share-workspace-tabContent")
          //- div.tab-pane.fade(id="nav-share-users", role="tabpanel", aria-labelledby="nav-share-users-tab")
            form
              div.form-group.d-flex
                label.col-form-label(for="search-for-users") Search:
                input.form-control.user-search.mx-3(id="search-for-users", name="workspaceUsers", type="text", placeholder="by username...")
                .invalid-feedback Please provide a username.
            table.table.user-list
              thead
                tr.header
                  th User
                  //- th Permission
                  th
              tbody
                tr.cloner.d-none
                  td.username Name
                  //- td.permission
                    select.form-control
                      option(value="read") Read
                      option(value="write") Write
                  td.d-flex.justify-content-center
                    button.btn.btn-danger Remove
          div.tab-pane.fade.active.show(id="nav-share-url", role="tabpanel", aria-labelledby="nav-share-url-tab")
            form
              //- div.custom-control.custom-switch
              //-   input.custom-control-input(type="checkbox", id="shareViaUrl")
              //-   label.custom-control-label(for="shareViaUrl") Share via a url
              p Copy the url below to share this workspace with any users.
              div.form-group.d-flex
                //- label.col-form-label(for="shareUrl") Url:
                input.form-control.mr-3(id="shareUrl", name="shareUrl", type="text", readonly)
                button.btn.btn-outline-info.share-url-btn(id="copyUrl", title="Copy Url")
                  i.fa.fa-clipboard
      div.modal-footer
        button.btn.btn-secondary(data-dismiss="modal") Close
        //- button.btn.btn-primary Share

