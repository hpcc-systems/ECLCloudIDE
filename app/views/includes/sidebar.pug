nav.col-sm-3.col-md-3.col-lg-2.d-none.d-sm-block.bg-dark.sidebar
  div.sidebar-sticky
    h6.sidebar-heading.justify-content-between.align-items-center.px-3.mt-1.mb-1.text-light
      a#dataset-collapser.text-light.js-collapser(data-toggle="collapse", href="#datasets", role="button", aria-expanded="false")
        span Datasets
          i.fa.fa-chevron-right.ml-1
      a#new-dataset.text-light.badge.badge-pill.badge-secondary.float-right(href='#', title="New Dataset...", data-toggle="modal", data-target="#newDatasetModal") New
        i.fa.fa-plus.ml-1.float-right

    div.nav.flex-column.datasets.collapse(id="datasets")
      a.text-muted.dataset.cloner.d-none(href='#')
        div
          i.float-right.fa.fa-close.delete.d-none(title="Delete dataset")
          i.float-right.fa.fa-pencil-square-o.edit.d-none.mr-2(title="Edit dataset")
          div.cardname-wrapper
            b.datasetname Name
              i.status.fa.fa-refresh
          span.rows Rows: ?
          br
          span.cols Columns: ?

    h6.sidebar-heading.justify-content-between.align-items-center.px-3.mt-4.mb-1.text-light
      a#script-collapser.text-light.js-collapser(data-toggle="collapse", href="#scripts", role="button", aria-expanded="false")
        span Scripts
          i.fa.fa-chevron-right.ml-1
      a#new-script.text-light.badge.badge-pill.badge-secondary.float-right(href='#', title="New Script...", data-toggle="modal", data-target="#newScriptModal") New
        i.fa.fa-plus.ml-1.float-right

    div.nav.flex-column.scripts.collapse(id="scripts")
      a.text-muted.script.cloner.d-none(href='#')
        span.scriptname script
          i.status.fa.fa-refresh.d-none
        i.float-right.fa.fa-close.delete.d-none(title="Delete script")
        i.float-right.fa.fa-pencil-square-o.edit.d-none.mr-2(title="Edit script")
      // li.nav-item: a.nav-link(href='#') Rate History

    a#new-folder.d-none(href='#', title="New Folder...", data-toggle="modal", data-target="#newFolderModal") New
div.context-menu(id="scripts-context-menu")
  ul.menu-items
    li(data-action="create_folder") New Folder
    li(data-action="create_script") New Script

div.context-menu(id="datasets-context-menu")
  ul.menu-items
    li(data-action="create_folder") New Folder
    li(data-action="create_dataset") New Dataset

div.modal.fade(id="newScriptModal", role="dialog")
  div.modal-dialog
    div.modal-content
      div.modal-header
        h5.modal-title New ECL Script
        button.close(data-dismiss="modal", aria-label="Close")
          span(aria-hidden="true") &times;
      div.modal-body
        form
          div.form-group
            label.col-form-label(for="new-script-name") Name:
            input.form-control(id="new-script-name", name="scriptName", type="text", required="required", placeholder="MyNewScript...")
            .invalid-feedback Please provide a name for the script.
      div.modal-footer
        button.btn.btn-secondary(data-dismiss="modal") Cancel
        button.btn.btn-primary(type="submit") Save

