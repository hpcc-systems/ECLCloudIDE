            i.fa.fa-chevron-right.ml-1
        a#new-dataset.text-light.badge.badge-pill.badge-secondary.float-right(href='#', title="New Dataset...", data-toggle="modal", data-target="#newDatasetModal") New
          i.fa.fa-plus.ml-1.float-right

      div.flex-column.datasets.collapse.folder-root(id="datasets")
        a.text-light.dataset.cloner.d-none(href='#')
          div.d-flex
            div.cardname-wrapper.flex-grow-1
              b.datasetname Name
                i.status.fa.fa-refresh.d-none
            i.fa.fa-pencil-square-o.edit.d-none.mr-1(title="Edit dataset")
            i.fa.fa-close.delete.d-none(title="Delete dataset")
            span.rows.d-none Rows: ?
            span.cols.d-none Columns: ?

    div.px-3.py-3(id="scripts-wrapper")
      h6.sidebar-heading.justify-content-between.align-items-center.mt-4.mb-1.text-light
        a#script-collapser.text-light.js-collapser(data-toggle="collapse", href="#scripts", role="button", aria-expanded="false")
          span Scripts
            i.fa.fa-chevron-right.ml-1
        a#new-script.text-light.badge.badge-pill.badge-secondary.float-right(href='#', title="New Script...", data-toggle="modal", data-target="#newScriptModal") New
          i.fa.fa-plus.ml-1.float-right

      div.flex-column.scripts.collapse.folder-root(id="scripts")
        a.text-light.script.cloner.d-none(href='#')
          span.scriptname script
            i.status.fa.fa-refresh.d-none
          i.float-right.fa.fa-close.delete.d-none(title="Delete script")
          i.float-right.fa.fa-pencil-square-o.edit.d-none.mr-1(title="Edit script")

    a#new-folder.d-none(href='#', title="New Folder...", data-toggle="modal", data-target="#newFolderModal") New
    li.d-none
      a.folder.cloner.text-light
        span.foldername Name
        i.float-right.fa.fa-close.delete.d-none(title="Delete folder")
        i.float-right.fa.fa-pencil-square-o.edit.d-none.mr-1(title="Edit folder")
