nav.col-sm-3.col-md-3.col-lg-2.d-none.d-sm-block.bg-dark.sidebar
  div.sidebar-sticky

    div.px-3.py-3(id="datasets-wrapper")
      h6.sidebar-heading.justify-content-between.align-items-center.mt-1.mb-1.text-light
        a#dataset-collapser.text-light.js-collapser(data-toggle="collapse", href="#datasets", role="button", aria-expanded="false")
