div.modal.fade(id="newScriptModal", role="dialog")
  div.modal-dialog
    div.modal-content
      div.modal-header
        h5.modal-title New ECL Script
        button.close(data-dismiss="modal", aria-label="Close")
          span(aria-hidden="true") &times;
      div.modal-body
        form
          div.form-group
            label.col-form-label(for="script-name") Name:
            input.form-control(id="script-name", name="scriptName", type="text", required="required")
            .invalid-feedback Please provide a name for the script.
      div.modal-footer
        button.btn.btn-secondary(data-dismiss="modal") Cancel
        button.btn.btn-primary(type="submit") Save

div.modal.fade(id="removeScriptModal", role="dialog")
  div.modal-dialog
    div.modal-content
      div.modal-header
        h5.modal-title Remove ECL Script
        button.close(data-dismiss="modal", aria-label="Close")
          span(aria-hidden="true") &times;
      div.modal-body
        p Delete the script "#[span.scriptname script]" from this workspace?

      div.modal-footer
        button.btn.btn-secondary(data-dismiss="modal") Cancel
        button.btn.btn-danger Delete

div.modal.fade(id="newDatasetModal", role="dialog")
  div.modal-dialog
    div.modal-content
      div.modal-header
        h5.modal-title New Dataset
        button.close(data-dismiss="modal", aria-label="Close")
          span(aria-hidden="true") &times;
      div.modal-body
        form
          div.form-group.form-group-file
            label.col-form-label(for="dataset-file") File:
            input.form-control-file(id="dataset-file", name="datasetFile", type="file", required="required", accept=".csv,.txt")
            .invalid-feedback Please select a CSV file to upload.
          div.form-group
            label.col-form-label(for="dataset-name") Name:
            input.form-control(id="dataset-name", name="datasetName", type="text", required="required")
            .invalid-feedback Please provide a name for the dataset.
          div.file-details
      div.modal-footer
        button.btn.btn-secondary(data-dismiss="modal") Cancel
        button.btn.btn-primary(type="submit") Save

div.modal.fade(id="removeDatasetModal", role="dialog")
